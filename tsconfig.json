{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "rootDir": "src",
    "outDir": "./lib",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
      "node_modules",
      "test",
      "lib"
    ]
}


